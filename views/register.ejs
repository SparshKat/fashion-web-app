<body>
<div class="bg-image"></div>
<div class="container " >
    <div class="row ">
       
       <div  class="login-page">
        <h1 style="text-align : center">Register</h1>
            <form action="/register" method="POST">
            <div class="row">
                <div class="col-md-6">

                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Your Name" name="name" required autofocus>
                    </div>
                </div>
                <div class="col-md-6">
                    
                    <div class="form-group">
                        <input class="form-control" type="username" placeholder="Username" name="username" required autofocus>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" placeholder="Email" name="email" required autofocus>
            </div>

            <div class="form-group">
                <input class="form-control" type="text" placeholder="Phone Number" name="phone" required autofocus>
            </div>
            
            <div class="form-group">
                <input class="form-control" type="password" placeholder="Password" name="password" required autofocus>
            </div>
            
            <div class="form-group">
                 <button class="btn btn-lg btn-default btn-block btn-submit">Sign Up</button>
            </div>
            
           <!-- <a href="/campgrounds">Go back</a>  -->
        </form>
       </div>
      
    </div>
  
</div>



